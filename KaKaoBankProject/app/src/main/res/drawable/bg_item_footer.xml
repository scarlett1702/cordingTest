<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- press-->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@android:color/darker_gray" />
            <stroke
                android:width="1dp"
                android:color="@android:color/darker_gray"
                />
            <corners
                android:bottomLeftRadius="@dimen/drawable_corner_radius"
                android:bottomRightRadius="@dimen/drawable_corner_radius"
                android:topLeftRadius="@dimen/drawable_corner_radius"
                android:topRightRadius="@dimen/drawable_corner_radius"
                />

        </shape>
    </item>

    <!-- default -->
    <item android:state_pressed="false">
        <shape>
            <solid android:color="@android:color/white"/>
            <stroke
                android:width="1dp"
                android:color="@android:color/darker_gray"
                />
            <corners
                android:bottomLeftRadius="@dimen/drawable_corner_radius"
                android:bottomRightRadius="@dimen/drawable_corner_radius"
                android:topLeftRadius="@dimen/drawable_corner_radius"
                android:topRightRadius="@dimen/drawable_corner_radius"
                />
        </shape>
    </item>

</selector>